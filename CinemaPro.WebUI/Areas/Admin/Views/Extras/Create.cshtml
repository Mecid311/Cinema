@model CinemaPro.Domain.Entity.Extra

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div>


                    <h4>Extra</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create" method="post"  enctype="multipart/form-data" id="movieForm" class="adminform">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Packet" class="control-label"></label>
                                    <input asp-for="Packet" class="form-control" />
                                    <span asp-validation-for="Packet" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cost" class="control-label"></label>
                                    <input asp-for="Cost" class="form-control" />
                                    <span asp-validation-for="Cost" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Desc" class="control-label"></label>
                                    <input asp-for="Desc" class="form-control" />
                                    <span asp-validation-for="Desc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label id="movieFile-viewer" for="movieFile"></label>
                                    <input type="file" name="movieImage"
                                           accept="image/x-png,image/gif,image/jpeg" id="movieFile" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-default adminform" style="margin-bottom:30px">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{


    <script>

        $('#movieFile').change(function (e) {
            let reader = new FileReader();
            reader.addEventListener("load", function () {
                $('#movieFile-viewer').css({
                    'background-image': `url(${reader.result})`
                });

                if ($(that).find('input:checked').length == 0)
                    $(label).trigger('click');
            }, false);

            reader.readAsDataURL(e.target.files[0]);
        });


        $('#movieForm').on('keyup keypress', function (e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) {
                e.preventDefault();
                return false;
            }
        });


    </script>
}




@section css{

    <style>

        #movieFile {
            display: none;
        }



        #movieFile-viewer {
            width: 300px;
            height: 300px;
            border: 1px solid #ccc;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }
    </style>
}