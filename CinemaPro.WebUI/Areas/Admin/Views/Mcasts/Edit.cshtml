@model CinemaPro.Domain.Entity.Mcast

@{
    ViewData["Title"] = "Edit";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div style="">
                    <h4 class="adminform">Mcast</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Edit" method="post" class="adminform">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="MoviedetailId" class="control-label"></label>
                                    <select asp-for="MoviedetailId" class="form-control" asp-items="ViewBag.MoviedetailId"></select>
                                    <span asp-validation-for="MoviedetailId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CastId" class="control-label"></label>
                                    <select asp-for="CastId" class="form-control" asp-items="ViewBag.CastId"></select>
                                    <span asp-validation-for="CastId" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Save" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-default adminform" style="margin-bottom:30px">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
