@model CinemaPro.Domain.Entity.Moviedetail

@{
    ViewData["Title"] = "Create";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div style="">

                    <h4 class="adminform">Moviedetail</h4>
                    <hr />
                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create" method="post" enctype="multipart/form-data" id="movieForm" class="adminform">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <label asp-for="Name" class="control-label"></label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Startdate" class="control-label"></label>
                                    <input asp-for="Startdate" class="form-control" />
                                    <span asp-validation-for="Startdate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Enddate" class="control-label"></label>
                                    <input asp-for="Enddate" class="form-control" />
                                    <span asp-validation-for="Enddate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Trailer" class="control-label"></label>
                                    <input asp-for="Trailer" class="form-control" />
                                    <span asp-validation-for="Trailer" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label id="movieFile-viewer" for="movieFile"></label>
                                    <input type="file" name="movieImage"
                                           accept="image/x-png,image/gif,image/jpeg" id="movieFile" />
                                </div>
                                <div class="form-group">
                                    <label id="movieFile-viewer1" for="movieFile1"></label>
                                    <input type="file" name="movieTitImage"
                                           accept="image/x-png,image/gif,image/jpeg" id="movieFile1" />
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price" class="control-label"></label>
                                    <input asp-for="Price" class="form-control" />
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Desc" class="control-label"></label>
                                    <input asp-for="Desc" class="form-control" />
                                    <span asp-validation-for="Desc" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Country" class="control-label"></label>
                                    <input asp-for="Country" class="form-control" />
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Time" class="control-label"></label>
                                    <input asp-for="Time" class="form-control" />
                                    <span asp-validation-for="Time" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Agelimit" class="control-label"></label>
                                    <input asp-for="Agelimit" class="form-control" />
                                    <span asp-validation-for="Agelimit" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Subtitles" class="control-label"></label>
                                    <input asp-for="Subtitles" class="form-control" />
                                    <span asp-validation-for="Subtitles" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LanguageId" class="control-label"></label>
                                    <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DirectorId" class="control-label"></label>
                                    <select asp-for="DirectorId" class="form-control" asp-items="ViewBag.DirectorId"></select>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Create" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index" class="btn btn-default adminform" style="margin-bottom:30px">Back to List</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{


    <script src="~/lib/ckeditor5/ckeditor.js"></script>
    <script>

        ClassicEditor
            .create(document.querySelector('#Desc'))
            .catch(error => {
                console.error(error);
            });
        $('#movieFile').change(function (e) {
            let reader = new FileReader();
            reader.addEventListener("load", function () {
                $('#movieFile-viewer').css({
                    'background-image': `url(${reader.result})`
                });

                if ($(that).find('input:checked').length == 0)
                    $(label).trigger('click');
            }, false);

            reader.readAsDataURL(e.target.files[0]);
        });
        $('#movieFile1').change(function (e) {
            let reader = new FileReader();
            reader.addEventListener("load", function () {
                $('#movieFile-viewer1').css({
                    'background-image': `url(${reader.result})`
                });

                if ($(that).find('input:checked').length == 0)
                    $(label).trigger('click');
            }, false);

            reader.readAsDataURL(e.target.files[0]);
        });

        $('#movieForm').on('keyup keypress', function (e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) {
                e.preventDefault();
                return false;
            }
        });


    </script>
}




@section css{

    <style>

        #movieFile {
            display: none;
        }

        #movieFile1 {
            display: none;
        }

        #movieFile-viewer {
            width: 300px;
            height: 300px;
            border: 1px solid #ccc;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }

        #movieFile-viewer1 {
            width: 300px;
            height: 300px;
            border: 1px solid #ccc;
            background-repeat: no-repeat;
            background-size: cover;
            background-position: center;
        }


        .ck-editor__editable {
            min-height: 300px !important;
        }
    </style>
}