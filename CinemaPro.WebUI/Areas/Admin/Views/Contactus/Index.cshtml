@model IEnumerable<CinemaPro.Domain.Entity.Contactus>

@{
    ViewData["Title"] = "Index";
    string message = TempData["message"] as string;
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            @if (!string.IsNullOrWhiteSpace(message))
            {
                <div  class="row">
                    <div class="col-12">
                        <div  class="alert alert-success">
                            @message
                        </div>
                    </div>
                </div>

            }
              
            <div class="col-md-12">
                <div style="">
                    <div  class="btn-group btn-group-sm" role="group" aria-label="Basic example">
                        <a class="btn btn-secondary" asp-action="index" asp-route-typeId="0">Hamısı</a>
                        <a class="btn btn-secondary" asp-action="index" asp-route-typeId="1">Gözləmədə</a>
                    </div>
                    <input  type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">
                    <div class="col-12 ">

                    </div>
                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Mail)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Comment)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Answer)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="myUL">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mail)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Comment)
                                    </td>
                                    <td>
                                        @Html.Raw(item.Answer)
                                    </td>
                                    <td class="operate-cell">
                                        @if (item.Answer == null)
                                        {
                                            <a asp-action="Answer" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                                <i class="fa fa-location-arrow"></i>
                                            </a>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{ 
<script>
    function myFunction() {
        var input, filter, ul, li, a, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        ul = document.getElementById("myUL");
        li = ul.getElementsByTagName("tr");
        for (i = 0; i < li.length; i++) {
            a = li[i].getElementsByTagName("td")[0];
            txtValue = a.textContent || a.innerText;
            if (txtValue.toUpperCase().indexOf(filter) > -1) {
                li[i].style.display = "";
            } else {
                li[i].style.display = "none";
            }
        }
    }

</script>
}