@model TypeViewModel
@{
    ViewData["Title"] = "MovieType";
}


<div class="st_bt_top_header_wrapper float_left">
    <div class="container">
        <div class="row">
            <div class="col-xl-3 col-lg-3 col-md-3 col-sm-12 col-12">
                <div class="st_bt_top_back_btn float_left">
                    <a asp-controller="movie" asp-action="movieseat"><i class="fas fa-long-arrow-alt-left"></i> &nbsp;Back</a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-12 col-12">
                <div class="st_bt_top_center_heading float_left">
                    <h3>@DateTime.Now</h3>
                </div>
            </div>
        </div>
    </div>
</div>


@* 
    kino adi
