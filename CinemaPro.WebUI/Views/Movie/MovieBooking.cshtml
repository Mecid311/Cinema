                                                        <div class="st_calen_asc_heart_cont">
                                                            <h3>
                                                                @item.Packet
                                                            </h3>
                                                            <ul>
                                                                <li>
                                                                    <img src="/uploads/@item.Image">
                                                                </li>
                                                                
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="st_calen_asc_tecket_time_select">
                                                        <ul>
                                                            <li>
                                                                <a asp-controller="movie" asp-action="movieSeat" asp-route-id="@item.Id" asp-route-movieid="@Model.Movieid">Əlavə et</a>
